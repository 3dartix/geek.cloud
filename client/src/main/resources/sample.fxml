<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXClient.Client.Controller">
    <stylesheets><URL value="@/Style.css" /></stylesheets>

    <MenuBar fx:id="menuBar" />
   <Label alignment="TOP_CENTER" text="Server files" />
   <ListView fx:id="listViewServer" VBox.vgrow="SOMETIMES" />
   <Separator prefWidth="200.0" />
   <Label text="Client files" />
   <ListView fx:id="listViewClient" VBox.vgrow="SOMETIMES" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#SendFile" text="Send" />
        <Button fx:id="btn2" onAction="#SendRequestForGetFile" text="Get copy" />
        <Button fx:id="btn11" layoutX="445.0" layoutY="10.0" onAction="#connectNetty" text="Connect" />
    </HBox>
</VBox>
